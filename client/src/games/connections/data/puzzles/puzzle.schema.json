{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Konekcije",
  "type": "object",
  "required": ["authors", "date", "categories"],
  "properties": {
    "authors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          }
        }
      }
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "categories": {
      "type": "array",
      "minItems": 4,
      "maxItems": 4,
      "items": {
        "type": "object",
        "required": ["name", "words", "difficulty"],
        "properties": {
          "name": {
            "type": "string"
          },
          "words": {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": {
              "type": "string"
            }
          },
          "difficulty": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4
          }
        }
      },
      "allOf": [
        { "contains": { "properties": { "difficulty": { "const": 1 } } } },
        { "contains": { "properties": { "difficulty": { "const": 2 } } } },
        { "contains": { "properties": { "difficulty": { "const": 3 } } } },
        { "contains": { "properties": { "difficulty": { "const": 4 } } } }
      ]
    }
  }
}
